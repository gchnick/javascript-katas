{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard", "plugin:jest/recommended", "plugin:jest/style", "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "space-before-function-paren": "off"
    },
    "plugins": ["prettier", "jest"]
}
